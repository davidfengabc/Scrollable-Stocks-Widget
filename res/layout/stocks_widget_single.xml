<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" android:background="#aa575757" android:layout_margin="5dip" android:id="@+id/widgetLayout">
    <LinearLayout android:orientation="horizontal" android:layout_height="fill_parent" android:layout_weight="1.0" android:layout_width="fill_parent">
        <ImageView android:id="@+id/stateImage" android:layout_height="fill_parent" android:layout_width="60px" android:layout_margin="4dip" android:scaleType="fitCenter"/>
        <ImageView android:layout_width="1px" android:layout_height="fill_parent" android:background="@drawable/divider"/>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="4dip">
            <TextView android:textColor="#FFF" android:id="@+id/quotePrice" android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1" android:gravity="center_vertical"/>
            <TextView android:textColor="#FFF" android:id="@+id/quoteChangePercent" android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1" android:gravity="center_vertical"/>
            <TextView android:textColor="#FFF" android:id="@+id/quoteChange" android:layout_width="fill_parent" android:layout_height="0dip" android:layout_weight="1" android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:layout_height="1px" android:layout_width="fill_parent" android:background="@drawable/divider"/>
    <TextView android:gravity="center" android:textColor="#FFF" android:id="@+id/quoteSymbol" android:layout_width="fill_parent" android:layout_height="wrap_content" />
</LinearLayout>